<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCF8EA"
    tools:context=".AppointmentDetailActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <RelativeLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/btnBackAppointmentDetail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_back_circle"
                    android:contentDescription="Kembali"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/txtLocationHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableStart="@android:drawable/ic_menu_mylocation"
                    android:drawablePadding="4dp"
                    android:text="Surabaya"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointment"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_tag_hijau"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/imgServiceIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_spa"
                        app:tint="#000"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtServiceType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grooming"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000"/>
                        <TextView
                            android:id="@+id/txtServiceDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spa - 1 Hour Course"
                            android:textSize="14sp"
                            android:textColor="#333"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="14sp"
                    android:textColor="#555"/>
                <TextView
                    android:id="@+id/txtProviderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barber Pet"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txtProviderAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Dr. Ir. H. Soekarno No.178, Mulyorejo, Kec. Mulyorejo, Surabaya"
                    android:textSize="14sp"
                    android:textColor="#333"/>
                <TextView
                    android:id="@+id/txtAppointmentDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today - 15:00"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Pet"
                    android:textSize="14sp"
                    android:textColor="#555"/>
                <TextView
                    android:id="@+id/txtPetNameType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grace - Kucing"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txtPetNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note: Nakal Jahil dan Gasuka dipegang perutnya"
                    android:textSize="14sp"
                    android:textColor="#333"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutUploadPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp" android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/bg_tag_hijau" android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/imgUploadPreview"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="#555"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/txtUploadHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload your prove of payment"
                    android:textSize="16sp"
                    android:textColor="#000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelAppointment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Batal"
                    android:backgroundTint="#FFC700"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnConfirmAppointment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Konfirmasi"
                    android:backgroundTint="#A5E9CD"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_nav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</RelativeLayout>