<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/beige"
    tools:context=".ui.shop.Checkout.CheckoutFragment"> <!-- CONTEXT DIUBAH! -->

    <TextView
        android:id="@+id/tv_checkout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Placeholder for address/delivery info -->
    <TextView
        android:id="@+id/tv_delivery_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Alamat Pengiriman: [Alamat Pengguna]"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_title" />

    <!-- Order Summary (you can replace this with a RecyclerView for items) -->
    <TextView
        android:id="@+id/tv_order_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ringkasan Pesanan:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_delivery_address" />

    <TextView
        android:id="@+id/total_payment_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Total Pembayaran: Rp 0"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_order_summary" />

    <!-- Payment Method Selection -->
    <TextView
        android:id="@+id/tv_payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Pilih Metode Pembayaran:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/total_payment_amount" />

    <RadioGroup
        android:id="@+id/rg_payment_methods"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_payment_method">

        <RadioButton
            android:id="@+id/rb_qris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QRIS"
            android:textSize="16sp"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/rb_bank_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transfer Bank"
            android:textSize="16sp"
            android:padding="8dp"/>
        <!-- Tambahkan metode pembayaran lain jika ada -->
    </RadioGroup>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bayar Sekarang"
        android:backgroundTint="@color/green_primary"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginTop="32dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_payment_methods"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
