<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/hewan_baru_card_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_hewan_rounded"
    android:paddingBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clipToOutline="true"
    android:elevation="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="14dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"> <!-- Beri margin bawah untuk shadow -->

    <ImageView
        android:id="@+id/imgHewanBaru"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hewan_baru_image_height"
        android:scaleType="centerCrop"
        android:src="@drawable/grace" />

    <TextView
        android:id="@+id/txtNamaHewanBaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Hewan"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"/>

    <TextView
        android:id="@+id/txtInfoHewanBaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kota"
        android:textSize="12sp"
        android:textColor="#666666"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/tagUmurHewanBaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Umur"
            android:textSize="10sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/bg_tag_kuning"
            android:textColor="#000"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tagGenderHewanBaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="10sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/bg_tag_hijau"
            android:textColor="#FFF" />
    </LinearLayout>
</LinearLayout>
