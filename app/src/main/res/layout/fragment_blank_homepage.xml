<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFBEF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Our Services -->
            <TextView
                android:id="@+id/tv_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Services"
                android:textStyle="bold"
                android:textSize="22sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:id="@+id/ll_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="center_vertical">

                <!-- Service 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_kota_jakarta"
                    android:layout_marginEnd="6dp"
                    android:padding="8dp">

                    <ImageView
                        android:src="@drawable/ic_shop"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:tint="@color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Service 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_yellow_rounded"
                    android:layout_marginEnd="6dp"
                    android:padding="8dp">

                    <ImageView
                        android:src="@drawable/ic_grooming"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:tint="@android:color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grooming n Doctor"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Service 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_kota_yogyakarta"
                    android:layout_marginEnd="6dp"
                    android:padding="8dp">

                    <ImageView
                        android:src="@drawable/ic_adopt"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:tint="@android:color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adopt"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Service 4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_kota_bali"
                    android:padding="8dp">

                    <ImageView
                        android:src="@drawable/ic_meal"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:tint="@android:color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pet Meal\nPlanner"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Explore -->
            <TextView
                android:id="@+id/tv_explore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:textStyle="bold"
                android:textSize="22sp"
                android:paddingStart="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_explore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clipToPadding="false"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>